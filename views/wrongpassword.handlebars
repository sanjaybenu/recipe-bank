<div class="wrong_login">
    <h1>Wrong Password.</h1>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary login-btn ms-auto" data-bs-toggle="modal"
        data-bs-target="#exampleModal">
        Click me to try again!
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Login to see the World of Tasty Food &#x1F37D;
                    </h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form class="text-center" action="/login" method="POST">
                        <div class="row">
                            <div class="col">
                                <label for="username">Username:</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <input type="text" , id="username" name="username">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label for="password">Password:</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <input type="password" id="password" name="password">
                            </div>
                        </div>
                        <div class="row my-2">
                            <div class="col">
                                <button class="btn btn-primary" id="myBtn"
                                    style="color: white;text-decoration:none">Login</button>
                            </div>
                        </div>


                    </form>
                </div>
                <div class="modal-footer">
                    For access to great recipes <a href="/register">Register</a> here
                </div>
            </div>
        </div>
    </div>