{{!-- recipe --}}


<div class="card mb-3 dish_card">
    <img src="{{renderRecipe.food_img}}" class="card-img-top dish_img" alt="No Image">
    <div class="card-body">
        <h5 class="card-title">{{renderRecipe.name}}</h5>
        <p class="card-text"><small class="text-muted">{{renderRecipe.cuisine}}</small></p>
        <p class="card-text"><small class="text-muted">By:<a
                    href="/users/{{renderRecipe.user_id}}">{{renderRecipe.user.username}}</a></small></p>
        <p class="card-text">{{renderRecipe.recipe}}</p>

    </div>
</div>

{{!--comments --}}



<h2>Comments</h2>
{{#each renderRecipe.comments}}
<div class="card text-bg-light mb-3" style="max-width: 18rem;">
    <div class="card-header">{{user.username}}</div> {{!work on this to show username who commented }}
    <div class="card-body">
        <p class="card-text">{{comment}}</p>
    </div>
</div>
{{/each}}




{{!-- add comment --}}

<h2>Add Comment</h2>
<form action="/comments" method="POST">
    <div class="mb-3 row">
        <label for="username" class="col-sm-2 col-form-label">Username:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="comment" name="username">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="comment" class="col-sm-2 col-form-label">Comment:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="comment" name="comment">
        </div>
        <div class="mb-3 row">
            <label for="recipe_comment" class="col-sm-2 col-form-label">Recipe:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="comment" name="recipeName" value="{{renderRecipe.name}}"
                    readonly>
            </div>


            <input class="btn btn-primary" type="submit" value="Submit">
        </div>
</form>