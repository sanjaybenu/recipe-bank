<h1 class="recipes_header">Recipes From Around the World:</h1>
{{#if loggedIn}}
<div>
  <div class="recipes_border">
    {{#each recipes}}

    <div class="card mb-3 recipes_card" style="max-width: 540px;">
      <a href="/recipes/{{id}}" class="no-underline">
        <div class="row g-0">
          <div class="col-md-4">

            <img src="{{food_img}}" class="img-fluid rounded-start" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">{{name}}</h5>
              <p class="card-text">By: {{user.username}}</p>
              <p class="card-text"><small class="text-muted">{{cuisine}}</small></p>
            </div>
          </div>
        </div>
    </div>
    </a>
    {{/each}}
  </div>
</div>
{{else}}
<h2 class="recipes_header">Please log in to access this page</h2>
{{/if}}